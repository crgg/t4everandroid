<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/media_viewer"
            android:textSize="17sp"
            android:textColor="@color/soft_black"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close_image"
            android:src="@drawable/ic_close"
            android:background="@null"
            android:tint="@color/soft_black"
            android:layout_width="46dp"
            android:layout_height="46dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/file_name"
        android:textColor="@color/soft_black"
        android:textSize="15sp"
        android:maxLines="1"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.t4app.t4everandroid.main.ui.media.AudioPlayerView
        android:visibility="gone"
        android:id="@+id/audioPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:visibility="gone"
        android:id="@+id/item_video_player"
        layout="@layout/dialog_player_video"/>

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_content"
        android:visibility="gone"
        android:textColor="@color/soft_black"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/soft_gray"
        android:textSize="14sp"
        android:scrollbars="vertical"
        android:maxHeight="400dp"
        android:padding="10dp"
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/close"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp"
        app:rippleColor="@color/red"
        android:textColor="@color/red" />

</LinearLayout>