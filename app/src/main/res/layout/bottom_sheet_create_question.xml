<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:fillViewport="true"
    android:overScrollMode="always">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/new_question"
                android:textSize="17sp"
                android:textColor="@color/soft_black"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_close"
                android:src="@drawable/ic_close"
                android:background="@null"
                android:tint="@color/soft_black"
                android:layout_width="46dp"
                android:layout_height="46dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auto_country_container"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:text="@string/category"
                android:textColor="@color/soft_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/auto_category"
                android:background="@drawable/bg_border_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:clickable="true"
                android:importantForAutofill="no"
                android:cursorVisible="false"
                android:focusable="false"
                android:text="@string/personal"
                android:textColor="@color/text_color"
                android:drawableEnd="@drawable/ic_more_info_rotated" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:text="@string/question"
                android:textColor="@color/soft_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:scrollbars="vertical"
                    android:overScrollMode="always"
                    android:paddingVertical="8dp"
                    android:hint="@string/write_the_question_here"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:textSize="15sp"
                    android:scrollHorizontally="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:text="@string/answer"
                android:textColor="@color/soft_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/answer_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:scrollbars="vertical"
                    android:overScrollMode="always"
                    android:paddingVertical="8dp"
                    android:hint="@string/write_the_answer_here"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:textSize="15sp"
                    android:scrollHorizontally="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_question"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:text="@string/save_question"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_save"
                app:iconTint="@color/white"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/second_login_color"
                app:strokeColor="@color/second_login_color"
                app:strokeWidth="2dp"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="5dp"
                android:text="@string/cancel"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:iconTint="@color/second_login_color"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                app:strokeColor="@color/second_login_color"
                app:strokeWidth="2dp"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/second_login_color" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
