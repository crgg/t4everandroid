<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/soft_gray"
        android:padding="20dp"

        tools:context=".main.ui.CreateLegacyProfileActivity">

    <TextView
        android:text="@string/profile"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView android:fitsSystemWindows="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main"
            android:padding="15dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/title_create_profile"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.3"
                android:textSize="18sp"
                android:layout_gravity="start"
                android:text="@string/personal_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/upload_image_btn"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/upload_a_photo"
                    android:background="@drawable/bg_profile"
                    android:backgroundTint="@color/second_login_color"
                    android:scaleType="centerCrop"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>

                <ImageView
                    android:id="@+id/iconUpload"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|end"
                    android:padding="3dp"
                    android:backgroundTint="@color/second_login_color"
                    android:src="@drawable/ic_upload"
                    app:tint="@color/white" />

            </FrameLayout>


            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/soft_black"
                android:textSize="14sp"
                android:text="@string/upload_a_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:id="@+id/full_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/full_name_value"
                    android:layout_width="match_parent"
                    android:textColor="@color/text_color"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="text"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:id="@+id/alias_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/alias_value"
                    android:layout_width="match_parent"
                    android:textColor="@color/text_color"
                    android:layout_height="40dp"
                    android:paddingVertical="8dp"
                    android:hint="@string/alias"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="text"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="14sp"
                        android:text="@string/birthdate"
                        android:textColor="@color/soft_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/birthdate_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:hintEnabled="false"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calendar_date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/birthdate_value"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingVertical="8dp"
                            android:hint="@string/mm_dd_yyyy"
                            android:focusable="false"
                            android:textColorHint="@color/gray_hint"
                            android:inputType="date"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/auto_country_container"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="@string/country"
                    android:textColor="@color/soft_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/auto_country"
                    android:background="@drawable/bg_border_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:completionThreshold="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/auto_language_container"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="@string/language"
                    android:textColor="@color/soft_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/auto_language"
                    android:background="@drawable/bg_border_line"
                    android:layout_width="match_parent"
                    android:text="@string/english"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_profile_btn"
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:text="@string/update_profile"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_save"
                    app:iconTint="@color/white"
                    android:textSize="13sp"
                    app:cornerRadius="8dp"
                    android:backgroundTint="@color/second_login_color"
                    app:strokeColor="@color/second_login_color"
                    app:strokeWidth="2dp"
                    app:rippleColor="@color/second_login_color"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/cancel"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:iconTint="@color/second_login_color"
                    android:textSize="13sp"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    app:strokeColor="@color/second_login_color"
                    app:strokeWidth="2dp"
                    app:rippleColor="@color/second_login_color"
                    android:textColor="@color/second_login_color" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <include android:id="@+id/change_password_item"
        layout="@layout/item_change_password"/>

    </LinearLayout>


</ScrollView>


