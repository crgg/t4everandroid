<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:fitsSystemWindows="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@color/background"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="13dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_email"
                android:textSize="15sp"
                android:textColor="@color/soft_black"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_close"
                android:src="@drawable/ic_close"
                android:background="@null"
                android:tint="@color/soft_black"
                android:layout_width="46dp"
                android:layout_height="46dp"/>
        </LinearLayout>

        <View
            android:background="@color/soft_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_contact"
                    android:textSize="14sp"
                    android:textColor="@color/soft_black"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/email_contact"
                    android:textSize="13sp"
                    android:textColor="@color/gray_hint"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/date_email"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/favorite_email_icon"
                android:src="@drawable/ic_star_off"
                app:tint="@color/gray_hint"
                android:layout_marginEnd="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>

        <View
            android:background="@color/soft_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/email_content"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <View
            android:background="@color/soft_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reply_btn"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginEnd="5dp"
                android:text="@string/reply"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_reply"
                app:iconTint="@color/second_login_color"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/second_login_color"
                app:strokeWidth="2dp"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/second_login_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/forward_btn"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginEnd="15dp"
                android:text="@string/forward"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_forward"
                app:iconTint="@color/second_login_color"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/second_login_color"
                app:strokeWidth="2dp"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/second_login_color" />


            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="5dp"
                android:text="@string/cancel"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/red"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                app:strokeColor="@color/red"
                app:strokeWidth="2dp"
                app:rippleColor="@color/red"
                android:textColor="@color/red" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

