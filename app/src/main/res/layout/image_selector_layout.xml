<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/second_login_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/select_an_option"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/header_image"
            app:layout_constraintBottom_toTopOf="@id/container_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/gallery_option"
                android:background="@drawable/bg_soft_border_line"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:padding="16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="@string/gallery"
                    android:src="@drawable/ic_gallery"
                    app:tint="@color/second_login_color"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

                <TextView
                    android:gravity="center"
                    android:maxLines="3"
                    android:textSize="14sp"
                    android:text="@string/select_a_photo_from_the_gallery"
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/camera_option"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_soft_border_line"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="@string/camera"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/second_login_color"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

                <TextView
                    android:gravity="center"
                    android:maxLines="3"
                    android:textSize="14sp"
                    android:text="@string/take_a_photo_from_the_ncamera"
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="@string/cancel"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                app:strokeColor="@color/second_login_color"
                app:strokeWidth="2dp"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/second_login_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="@string/save"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/second_login_color"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

