<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:fitsSystemWindows="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@android:color/transparent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container_select_contact"
            android:visibility="gone"
            android:padding="12dp"
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Contacts"
                        android:textSize="17sp"
                        android:textColor="@color/soft_black"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3 Contacts"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_close_select_contact"
                    android:src="@drawable/ic_close"
                    android:background="@null"
                    android:tint="@color/gray_hint"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/search_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_search">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_value"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/text_color"
                    android:paddingVertical="8dp"
                    android:hint="@string/search"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="text|textEmailAddress"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contacts_rv"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_chat"
            android:visibility="visible"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/title_container"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/change_contact_btn"
                    android:src="@drawable/ic_back_arrow"
                    android:tint="@color/second_login_color"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

                <ImageView
                    android:id="@+id/btn_profile_data"
                    android:src="@drawable/ic_bot"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/white"
                    android:background="@drawable/bg_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/chat_title"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/soft_black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/chat_subtitle"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:textColor="@color/gray_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/moreOptionsChat"
                    android:src="@drawable/ic_more_options"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:padding="7dp"
                    android:layout_width="46dp"
                    android:layout_height="46dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_first_msg"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bot"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/second_login_color"
                    android:background="@drawable/bg_profile"
                    android:backgroundTint="@color/soft_gray"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

                <TextView
                    android:id="@+id/welcome_chat_tv"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Hello, I'm Javier Item Update. What can I help you with today?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_sms"
                        app:tint="@color/black"
                        android:layout_marginTop="2dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="@string/start_a_conversation"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Click on a topic to begin chatting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategoriesFirstMsg"
                    android:background="@color/background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_rv"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <View
                android:layout_marginBottom="8dp"
                android:background="@color/soft_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/container_record_audio"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/icon_record"
                        android:src="@drawable/ic_conversation_24_dp"
                        app:tint="@color/second_login_color"
                        android:background="@null"
                        android:padding="10dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"/>

                    <TextView
                        android:id="@+id/audio_timer"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:layout_marginEnd="5dp"
                        android:text="@string/_00_00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_side_to_cancel"
                            android:gravity="center_vertical"
                            android:textColor="@color/text_color"
                            android:layout_marginEnd="5dp"
                            android:text="@string/slide_to_cancel"
                            app:drawableEndCompat="@drawable/ic_arrow_right"
                            android:drawableTint="@color/gray_hint"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/cancel_send_audio"
                        android:src="@drawable/ic_delete"
                        android:tint="@color/red"
                        android:background="@null"
                        android:layout_width="43dp"
                        android:layout_height="43dp"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/imagesSelectedContainer"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/container_text_message"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/upload_file"
                            android:src="@drawable/ic_attach_file"
                            android:rotation="45"
                            android:tint="@color/second_login_color"
                            android:background="@null"
                            android:padding="10dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/record_audio_btn"
                            android:src="@drawable/ic_conversation_24_dp"
                            android:tint="@color/second_login_color"
                            android:background="@null"
                            android:padding="10dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>

                        <EditText
                            android:id="@+id/text_message"
                            android:gravity="center_vertical"
                            android:hint="@string/write_a_message"
                            android:background="@drawable/bg_border_line"
                            android:textColorHint="@color/gray_hint"
                            android:textColor="@color/text_color"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:inputType="text|textMultiLine"
                            android:maxLines="8"
                            android:scrollbars="vertical"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/send_message_btn"
                            android:src="@drawable/ic_send"
                            android:tint="@color/white"
                            android:background="@drawable/bg_profile"
                            android:backgroundTint="@color/sign_in_color"
                            android:layout_width="43dp"
                            android:layout_height="43dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

