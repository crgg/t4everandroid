<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:background="@color/white"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/change_password"
                android:textColor="@color/soft_black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/change_password_check"
                android:textSize="12sp"
                android:text="@string/change"
                android:textColor="@color/text_color"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                app:buttonTint="@color/second_login_color"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:background="@color/white"
            android:id="@+id/input_password_container"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="@string/current_password"
                    android:textColor="@color/soft_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/currentPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="password_toggle"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/currentPasswordValue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingVertical="8dp"
                        android:textColorHint="@color/gray_hint"
                        android:inputType="textPassword"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="@string/new_password"
                    android:textColor="@color/soft_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/newPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="password_toggle"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/newPasswordValue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingVertical="8dp"
                        android:textColorHint="@color/gray_hint"
                        android:inputType="textPassword"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="14sp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/soft_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="password_toggle"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPasswordValue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingVertical="8dp"
                        android:textColorHint="@color/gray_hint"
                        android:inputType="textPassword"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_password"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="@string/update_password"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="13sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/second_login_color"
                app:strokeColor="@color/second_login_color"
                app:strokeWidth="2dp"
                app:rippleColor="@color/second_login_color"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
