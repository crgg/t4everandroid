<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="colorNavigationItem" type="color">@color/nav_item_text_color</item>
    <item name="colorNavigationItemSelected" type="color">@color/white</item>
    <item name="drawableNavigationItemBackground" type="drawable">@drawable/nav_item_background</item>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>


    <style name="CustomTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/second_login_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="startIconTint">@color/second_login_color</item>
        <item name="endIconTint">@color/second_login_color</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="CustomTextInputEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>
